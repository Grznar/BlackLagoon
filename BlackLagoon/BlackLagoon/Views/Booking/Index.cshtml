@using BlackLagoon.Application.Common.Utility
@{
	var status = Context.Request.Query["status"];
	var approved = "";
	var pending = "";
	var cancelled = "";
	var complleted="";
	var checkedIn="";

	switch (status)
	{
		case SD.StatusPending:

			pending = "text-white bg-success";
			break;

		case SD.StatusApproved:

			approved = "text-white bg-success";
			break;

		case SD.StatusCompletted:

			complleted = "text-white bg-success";
			break;

		case SD.StatusCheckIn:
			checkedIn= "text-white bg-success";
			break;
		case SD.StatusCancelled:
			cancelled = "text-white bg-success";
			break;
		default:
			break;
	}
}


<div class="w-100 card border-0 p-4">
	<div class="card-header bg-success bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Booking List</h2>
			</div>
		</div>
	</div>
</div>
<div class="card-body border pt-4">
	<div class="d-flex justify-content-end pb-4 pt-2 mx-1">
		<ul class="list-group list-group-horizontal-sm ">
			
			<li class=list-group-item @pending>
				<a style="text-decoration:none" asp-controller="Booking" asp-action="Index" asp-route-status="@SD.StatusPending">@SD.StatusPending</a>
			</li>
			<li class=list-group-item @checkedIn>
				<a  style="text-decoration:none" asp-controller="Booking" asp-action="Index" asp-route-status="@SD.StatusCheckIn">@SD.StatusCheckIn</a>
			</li>
			<li class=list-group-item @cancelled>
				<a style="text-decoration:none" asp-controller="Booking" asp-action="Index" asp-route-status="@SD.StatusCancelled">@SD.StatusCancelled</a>
			</li>
			<li class=list-group-item @complleted>
				<a style="text-decoration:none" asp-controller="Booking" asp-action="Index" asp-route-status="@SD.StatusCompletted">@SD.StatusCompletted</a>
			</li>
			
			<li class=list-group-item @approved>
				<a style="text-decoration:none" asp-controller="Booking" asp-action="Index" asp-route-status="@SD.StatusApproved">@SD.StatusApproved</a>
			</li>
		</ul>
	</div>


	
	<table id="tblData" class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Phone Number</th>
				<th>Email</th>
				<th>Status</th>
				<th>Check in Date</th>
				<th>Nights</th>
				<th>Total</th>
				<th>Status</th>

				<th></th>
			</tr>
		</thead>
		<tbody>
			
		</tbody>
	</table>
</div>
@section Scripts
{
<script src="/js/bookings.js"></script>
	
}