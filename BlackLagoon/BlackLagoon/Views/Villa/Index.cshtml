@model List<Villa>



<div class="w-100 card border-0 p-4">
	<div class="card-header bg-success bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Villa List</h2>
			</div> 
		</div>
	</div>
</div>
<div class="card-body border pt-4">


<div class="row pb-3 p-3">
	<div class="col-6 offset-6 text-end">
		<a asp-controller="Villa" asp-action="Create" class="btn btn-secondary">
				<i class="bi bi-bag-plus-fill"> Create New Villa</i>
			
		</a>
	</div>
</div>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Price</th>
			<th>Sqft</th>
			<th>Occupancy</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var villa in Model)
		{
			<tr>
				<td>@villa.Name</td>
				<td>@villa.Price</td>
				<td>@villa.Sqft</td>
				<td>@villa.Occupancy</td>
				<td><div class="w-75 btn-group" role="group">
							<a asp-action="Update" asp-route-villaId="@villa.Id" class="btn btn-success mx-2">
								<i class="bi bi-pencil-fill">Edit</i>
							</a>
							<a asp-action="Delete" asp-route-villaId="@villa.Id" class="btn btn-danger mx-2">
								<i class="bi bi-trash-fill">Delete</i>
							</a>
				
				</div></td>
			</tr>
		}
	</tbody>
</table>
</div>
